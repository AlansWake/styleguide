{% set hasDataattrs = checkbox.dataattrs is defined and checkbox.dataattrs is not empty %}

<label class="osg-checkbox {{ checkbox.variant | default('osg-v-default')  }} {{ checkbox.modifiers | default(null) }}">
  <input type="checkbox"
    {% if hasDataattrs %}
      {% for dataattr in checkbox.dataattrs %}
        {{ dataattr.key }}={{ dataattr.val }}
      {% endfor %}
    {% endif %}
  >
  <span>{{ checkbox.text }}</span>
  <span class="osg-checkmark"></span>
</label>
