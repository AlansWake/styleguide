{% set hasButton = promo.button is defined and promo.button is not empty %}
{% set hasLogo = promo.logo is defined and promo.logo is not empty %}
{% set promoVariant = promo.variant | default('osg-v-default') %}

<section class="osg-promo {{ promoVariant }}">
  {% include "atoms/decorators/figure/figure.twig" %}
  <div class="osg-promo__content-container">
    <div class="osg-promo__content-wrapper">
      <div class="osg-promo__content">
        <h2>{{ promo.title }}</h2>
        {% if hasButton and promo.showButton == true %}
          {% embed "atoms/buttons/button/button.twig" with { button: promo.button } %}
            {% block buttonContent %}
              {% if promo.button.content is defined and promo.button.content is not empty %}
                {{ button.content }}
              {% endif %}
            {% endblock %}
          {% endembed %}
        {% endif %}
      </div>
      {% if hasLogo and promo.showLogo == true %}
        <div class="osg-promo__logo">
          {% include 'atoms/decorators/figure/figure.twig' with { figure: promo.logo } %}
        </div>
      {% endif %}
    </div>
  </div>
</section>
