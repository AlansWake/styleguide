{% set hasAddressLink = contactBox.addressLink is defined and contactBox.addressLink is not empty %}

<address class="osg-contact-box {{ contactBox.modifiers | default(null) }}">
  <div>
    <h2>{{ contactBox.phoneNumberTitle }}</h2>
    <p>
      <a href="tel:{{ contactBox.phonePrefix | default(null) }} {{contactBox.phoneNumber}}">
      {{ contactBox.phonePrefix | default(null) }} {{contactBox.phoneNumber}}
      </a>
    </p>
  </div>
  <div>
    <h2>{{ contactBox.emailTitle }}</h2>
    <p>
      <a href="mailto:{{contactBox.email}}">{{contactBox.email}}</a>
    </p>
  </div>
  <div>
    <h2>{{ contactBox.visitAddressTitle }}</h2>
    <p>
      {{ contactBox.visitAddress }}
    </p>
    {% if hasAddressLink %}
    <p>
      <a href="{{ contactBox.addressLink.url }}">{{contactBox.addressLink.text}}</a>
    </p>
    {% endif %}
  </div>
  <div>
    <h2>{{ contactBox.postalAddressTitle }}</h2>
    <p>
      {{contactBox.postalAddressLine1}}
    <br>
      {{contactBox.postalAddressLine2}}
    </p>
  </div>
</address>
